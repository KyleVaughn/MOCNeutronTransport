#pragma once

#include <cassert> // assert
#include <cstdint> // int32_t, int64_t

// OpenMP
#cmakedefine01 UM2_ENABLE_OPENMP

// CUDA
#cmakedefine01 UM2_ENABLE_CUDA
#undef HOST
#undef DEVICE
#undef HOSTDEV
#undef GLOBAL
#if UM2_ENABLE_CUDA
#  include <cuda_runtime.h>
#  define HOST    __host__
#  define DEVICE  __device__
#  define HOSTDEV __host__ __device__
#  define GLOBAL  __global__
#else
#  define HOST
#  define DEVICE
#  define HOSTDEV
#  define GLOBAL
#endif

// spdlog
#define SPDLOG_ACTIVE_LEVEL @UM2_SPDLOG_LEVEL@

// Visualization
#cmakedefine01 UM2_ENABLE_VIS

// Attributes
// -----------------------------------------------------------------------------
// These are supported by GCC and Clang, but cause issues when using nvcc
#undef PURE
#undef CONST
#undef HOT
#if defined(__NVCC__)
#  define PURE
#  define CONST
#  define HOT
#else
#  define PURE  [[gnu::pure]]
#  define CONST [[gnu::const]]
#  define HOT   [[gnu::hot]]
#endif

// Typedefs
// -----------------------------------------------------------------------------
#cmakedefine01 UM2_ENABLE_INT64
#if UM2_ENABLE_INT64
using Size = int64_t;
#else
using Size = int32_t;
#endif
#define EIGEN_DEFAULT_DENSE_INDEX_TYPE Size 
